<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="AppXF.Themes.LightTheme">

    <!--pages-->
    <Color x:Key="ContentPageBackgroundColor">GhostWhite</Color>
    <Color x:Key="TabbedPageBackgroundColor">#e6ffff</Color>
    <Color x:Key="TabbedPageSelectedColor">#0099cc</Color>
    <Color x:Key="TabbedPageUnselectedColor">DimGray</Color>
    
    <!--text-->
    <Color x:Key="PrimaryTextColor">MediumAquamarine</Color>
    <Color x:Key="SecondaryTextColor">Black</Color>
    <Color x:Key="TransparentColor">Transparent</Color>
    
    <!--switch-->
    <Color x:Key="SwitchOnColor">MediumAquaMarine</Color>
    <Color x:Key="SwitchOffColor">Brown</Color>
    
    <!--button-->
    <Color x:Key="ButtonBackgroundColor">White</Color>
    <Color x:Key="ButtonBorderColor">Black</Color>
</ResourceDictionary>
