<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="AppXF.Themes.DarkTheme">

    <!--pages-->
    <Color x:Key="ContentPageBackgroundColor">#000033</Color>
    <Color x:Key="TabbedPageBackgroundColor">Black</Color>
    <Color x:Key="TabbedPageSelectedColor">#0066FF</Color>
    <Color x:Key="TabbedPageUnselectedColor">LightGray</Color>

    <!--text-->
    <Color x:Key="PrimaryTextColor">#0066FF</Color>
    <Color x:Key="SecondaryTextColor">White</Color>
    <Color x:Key="TransparentColor">Transparent</Color>

    <!--switch-->
    <Color x:Key="SwitchOnColor">MediumAquaMarine</Color>
    <Color x:Key="SwitchOffColor">Brown</Color>

    <!--button-->
    <Color x:Key="ButtonBackgroundColor">LightGray</Color>
    <Color x:Key="ButtonBorderColor">Black</Color>
</ResourceDictionary>